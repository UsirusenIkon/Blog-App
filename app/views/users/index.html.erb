
<div class="main">
  <div class="content">
    <h1>All users in rails</h1>
    <% @users.each do |user| %>
      <div class='box flex'>
        <div class='img flex'>
          <img src="<%= user.photo %>" alt="unsplash">
        </div>
        <div class='user-details'>
          <p><%= link_to user.name, user_path(user) %></p>
          <span class="post-no">number of posts: <%= user.posts_counter %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
