<div class="main">
  <div class="content">
    <h1><%= @user.name %>'s Posts</h1>
    <div class='box flex'>
      <div class='img flex'>
        <img src="<%= @user.photo %>" alt="unsplash">
      </div>
      <div class='user-details'>
        <p><%= @user.name %></p>
          <span class="post-no">number of posts: <%= @user.posts_counter %></span>
      </div>
    </div>

    <% @posts.each do |post| %>
      <div class="post">
        <p><b><%= post.title %></b></p>
        <p><%= post.text %></p>
        <div class="come_like">
          <span>comments: <%= post.comments_counter %>, likes: <%= post.likes_counter %></span>
        </div>

        <div class="comments">
          <% if post.comments_counter == 0 %> 
            <span>There are no comments for this post.</span>
          <% else %>
            <% post.recent_comments.each do |comment| %>
              <p><%= comment.author.name %>: <%= comment.text %></p>
            <% end %>
            <button class="post-btn">
              <%= link_to "See Post", user_post_path(post.author_id, post.id) %>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>